<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Mapper">
    <select id="selectRank" resultMap="rankItem">
        select goods.name as goods_name, t.turnover
        from (
                 select goods_id,sum(price*quantity)as turnover from `order` group by goods_id
             ) t
                 right join goods
                            on goods_id = goods.id
        order by turnover desc
    </select>

    <resultMap id="rankItem" type="com.github.hcsp.entity.RankItem">
        <result property="turnover" column="turnover"/>
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result property="id" column="goods_id"/>
            <result property="name" column="goods_name"/>
        </association>
    </resultMap>
</mapper>