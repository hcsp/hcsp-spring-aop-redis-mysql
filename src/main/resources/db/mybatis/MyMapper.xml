<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyMapper">
    <select id="getOrderRank" resultMap="rankItem">
     select t.goods_id, goods.name, t.totalPrice
    from (select goods_id, sum(price * quantity) as totalPrice from `order` group by goods_id) t
             inner join goods
                        on t.goods_id = goods.id
    order by totalPrice desc;
    </select>
    <resultMap type="com.github.hcsp.entity.RankItem" id="rankItem">
        <result column="totalPrice" property="totalPrice"/>
        <association property="goods" javaType="com.github.hcsp.entity.Goods">
            <result property="goods_id" column="goods_id"/>
            <result property="name" column="name"/>
        </association>
    </resultMap>
</mapper>