<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="MyMapper">
    <select id="selectRank" resultMap="rankItem">
        select goods.name, t.Total_Price
        from
            (
                select goods_id, sum((price * quantity))as Total_Price from `order` group by goods_id
            ) t
                inner join goods
                           on t.goods_id = goods.id order by t.Total_Price desc ;
    </select>
    <resultMap id="rankItem" type="com.github.hcsp.entity.RankItem">
        <result property="goodName" column="goodName"/>
        <result property="totalPrice" column="totalPrice"/>
    </resultMap>
</mapper>