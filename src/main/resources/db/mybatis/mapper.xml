<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper">
    <select id="selectRank" resultMap="rankItem">
        select goods.name,sum(`order`.price*`order`.quantity) as total
        from `order`
                 right join goods on
            `order`.goods_id = goods.id
        group by name
        order by total desc;
    </select>

    <resultMap id="rankItem" type="com.github.hcsp.entity.RankItem">
        <result property="goodName" column="name"/>
        <result property="total" column="total"/>
<!--        <association property="goods" javaType="com.github.hcsp.entity.Goods">-->
<!--            <result property="id" column="id"/>-->
<!--            <result property="name" column="name"/>-->
<!--        </association>-->
    </resultMap>
</mapper>